<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         metadata-complete="true">

    <display-name>quTester</display-name>

    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>forwarderFilter</filter-name>
        <filter-class>com.testerum.web_backend.filter.ForwarderFilter</filter-class>
        
        <init-param>
            <param-name>forwardToUrl</param-name>
            <param-value>/index.html</param-value>
        </init-param>
        
        <init-param>
            <param-name>ignoredUrls</param-name>
            <param-value>
                .*\\.js$

                .*\\.css$

                .*\\.png$
                .*\\.gif$
                .*\\.jpg$
                .*\\.jpeg$
                .*\\.svg$

                .*\\.ttf$
                .*\\.eot$
                .*\\.woff$
                .*\\.woff2$

                /rest/.*
            </param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>forwarderFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>springDispatcherServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:/spring/spring_web.xml</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>springDispatcherServlet</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>


    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/rest/error</location>
    </error-page>

    <error-page>
        <location>/rest/error</location>
    </error-page>


    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
    </welcome-file-list>

    <session-config>
        <cookie-config>
            <http-only>true</http-only>
            <secure>true</secure>
        </cookie-config>
    </session-config>

    <context-param>
        <param-name>defaultHtmlEscape</param-name>
        <param-value>true</param-value>
    </context-param>

    <!-- do not scan for WEB-INF/web-fragment.xml files -->
    <absolute-ordering/>

</web-app>
