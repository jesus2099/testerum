<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true" scan="false" scanPeriod="100 milliseconds">

    <!-- commenting-out requestInfo; todo: add requestInfo MDC HTTP filter -->
    <!--<property name="log_pattern" value="%date{HH:mm:ss.SSS, UTC} [%-5level] thread=[%-17thread] %-40.40logger{40} - %msg  ||||| requestInfo=[%mdc{requestInfo}]%n" />-->
    <property name="log_pattern" value="%date{HH:mm:ss.SSS, UTC} [%-5level] thread=[%-17thread] %-40.40logger{40} - %msg%n" />

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>${log_pattern}</Pattern>
        </encoder>
    </appender>

    <logger name="com.testerum" level="DEBUG" />

    <logger name="com.qutester.db.mapper" level="INFO" />

    <!--========== Spring ==========-->
    <logger name="org.springframework" level="WARN" />

    <!--========== Reflections ==========-->
    <logger name="org.reflections.Reflections" level="ERROR" />


    <root>
        <level value="INFO" />
        <appender-ref ref="CONSOLE" />
    </root>

</configuration>
