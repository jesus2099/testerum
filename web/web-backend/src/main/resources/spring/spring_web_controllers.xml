<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans    http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/mvc      http://www.springframework.org/schema/mvc/spring-mvc.xsd
       ">

    <mvc:resources mapping="/index.html" location="/index.html" />

    <bean id="attachmentsController" class="com.testerum.web_backend.controller.attachments.AttachmentsController">
        <constructor-arg name="attachmentFileRepositoryService" ref="attachmentFileRepositoryService"/>
    </bean>

    <bean id="featureController" class="com.testerum.web_backend.controller.feature.FeatureController">
        <constructor-arg name="featureService" ref="featureService"/>
    </bean>

    <bean id="manualTestsController" class="com.testerum.web_backend.controller.manual.ManualTestsController">
        <constructor-arg name="manualTestsService" ref="manualTestsService"/>
    </bean>

    <bean id="manualTestsRunnerController" class="com.testerum.web_backend.controller.manual.ManualTestsRunnerController">
        <constructor-arg name="manualTestsRunnerService" ref="manualTestsRunnerService"/>
    </bean>

    <bean id="basicStepsController" class="com.testerum.web_backend.controller.step.BasicStepsController">
        <constructor-arg name="stepService" ref="stepService"/>
    </bean>

    <bean id="messageController" class="com.testerum.web_backend.controller.message.MessageController">
        <constructor-arg name="messageService" ref="messageService"/>
    </bean>

    <bean id="composedStepController" class="com.testerum.web_backend.controller.step.ComposedStepController">
        <constructor-arg name="stepService" ref="stepService"/>
        <constructor-arg name="stepUpdateService" ref="stepUpdateService"/>
        <constructor-arg name="stepUpdateCompatibilityService" ref="stepUpdateCompatibilityService"/>
    </bean>

    <bean id="stepsTreeController" class="com.testerum.web_backend.controller.step.StepsTreeController">
        <constructor-arg name="stepService" ref="stepService"/>
    </bean>

    <bean id="testsController" class="com.testerum.web_backend.controller.test.TestsController">
        <constructor-arg name="testsService"          ref="testsService"/>
    </bean>

    <bean id="testExecutionController" class="com.testerum.web_backend.controller.runner.TestExecutionController">
        <constructor-arg name="testsExecutionService" ref="testsExecutionService"/>
    </bean>

    <bean id="testRunnerReportController" class="com.testerum.web_backend.controller.report.RunnerResultController">
        <constructor-arg name="testRunnerResultService" ref="testRunnerResultService"/>
    </bean>

    <bean id="tagsController" class="com.testerum.web_backend.controller.tag.TagsController">
        <constructor-arg name="tagsService" ref="tagsService" />
    </bean>

    <bean id="variablesController" class="com.testerum.web_backend.controller.vars.VariablesController">
        <constructor-arg name="variablesService" ref="variablesService"/>
    </bean>

    <bean id="connectionController" class="com.testerum.web_backend.controller.resources.rdbms.RdbmsController">
        <constructor-arg name="networkService" ref="networkService"/>
        <constructor-arg name="rdbmsService" ref="rdbmsService"/>
        <constructor-arg name="rdbmsDriverConfigService" ref="rdbmsDriverConfigService"/>
    </bean>

    <bean id="httpController" class="com.testerum.web_backend.controller.resources.http.HttpController">
        <constructor-arg name="httpClientService" ref="httpClientService"/>
    </bean>

    <bean id="resourcesController" class="com.testerum.web_backend.controller.resources.ResourcesController">
        <constructor-arg name="resourcesService" ref="resourcesService"/>
    </bean>

    <bean id="fileSystemController" class="com.testerum.web_backend.controller.config.FileSystemController">
        <constructor-arg name="fileSystemService" ref="fileSytemService"/>
    </bean>

    <bean id="startConfigController" class="com.testerum.web_backend.controller.config.SetupController">
        <constructor-arg name="settingsManager" ref="settingsManager"/>
        <constructor-arg name="stepService" ref="stepService"/>
    </bean>

    <bean id="settingsController" class="com.testerum.web_backend.controller.config.SettingsController">
        <constructor-arg name="settingsService" ref="settingsService"/>
        <constructor-arg name="stepService" ref="stepService"/>
    </bean>

    <bean class="com.testerum.web_backend.controller.error.ErrorController">
        <constructor-arg name="genericErrorResponsePreparer">
            <bean class="com.testerum.web_backend.controller.error.model.response_preparers.generic.GenericErrorResponsePreparer"/>
        </constructor-arg>
        <constructor-arg name="errorResponsePreparerMap">
            <map>
                <entry key="com.testerum.model.exception.IllegalFileOperationException">
                    <bean class="com.testerum.web_backend.controller.error.model.response_preparers.illegal_file_opperation.IllegalFileOperationPreparer"/>
                </entry>

                <entry key="com.testerum.model.exception.ValidationException">
                    <bean class="com.testerum.web_backend.controller.error.model.response_preparers.validation.ValidationErrorResponsePreparer"/>
                </entry>
            </map>
        </constructor-arg>
    </bean>

    <bean id="testsWebSocketController" class="com.testerum.web_backend.controller.runner.TestsWebSocketController">
        <constructor-arg name="testsExecutionService"   ref="testsExecutionService"/>
        <constructor-arg name="objectMapper"            ref="testsRunnerJsonObjectMapper"/>
        <constructor-arg name="fileRepositoryService"   ref="fileRepositoryService"/>
        <constructor-arg name="testRunnerResultService" ref="testRunnerResultService"/>
    </bean>

</beans>