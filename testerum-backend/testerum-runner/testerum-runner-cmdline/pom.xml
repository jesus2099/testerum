    <profiles>
        <!-- production -->
        <profile>
            <id>production</id>

            <!-- activated by the presence of the "production" system property -->
            <activation>
                <property>
                    <name>production</name>
                </property>
            </activation>

            <build>
                <plugins>
                    <!-- download nodejs -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>

                        <executions>
                            <!-- download-node -->
                            <execution>
                                <id>download-node</id>
                                <phase>prepare-package</phase>
                                <configuration>
                                    <target>
                                        <ant antfile="build.xml" target="main-prod" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- maven-assembly-plugin (create final dist file) -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>

                        <configuration>
                            <appendAssemblyId>true</appendAssemblyId>
                            <attach>true</attach>
                        </configuration>

                        <executions>
                            <!-- assemble-dist-linux -->
                            <execution>
                                <id>assemble-dist-linux</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-linux.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                            <!-- assemble-dist-mac -->
                            <execution>
                                <id>assemble-dist-mac</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-mac.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                            <!-- assemble-dist-windows -->
                            <execution>
                                <id>assemble-dist-windows</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-windows.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- development -->
        <profile>
            <id>development</id>

            <!-- activated by the absence of the "production" system property -->
            <activation>
                <property>
                    <name>!production</name>
                </property>
            </activation>

            <build>
                <plugins>
                    <!-- copy dependencies to "package/basic_steps" directory -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>

                        <configuration>
                            <outputDirectory>${project.basedir}/../../../package/runner/repo</outputDirectory>
                            <includeScope>runtime</includeScope>
                        </configuration>
                    </plugin>

                    <!-- download nodejs & copy to package directory -->
                   <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>

                       <executions>
                           <!-- delete-node-download -->
                           <execution>
                               <id>delete-node-download</id>
                               <phase>clean</phase>
                               <configuration>
                                   <target>
                                       <ant antfile="build.xml" target="clean" />
                                   </target>
                               </configuration>
                               <goals>
                                   <goal>run</goal>
                               </goals>
                           </execution>

                           <!-- download-node -->
                           <execution>
                               <id>download-node</id>
                               <phase>prepare-package</phase>
                               <configuration>
                                   <target>
                                       <ant antfile="build.xml" target="main-dev" />
                                   </target>
                               </configuration>
                               <goals>
                                   <goal>run</goal>
                               </goals>
                           </execution>
                       </executions>
                    </plugin>

                    <!-- copy shell scripts to package directory  -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-runner-to-package-dir</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.basedir}/../../../package/runner</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.basedir}/src/main/assembly/package</directory>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <!-- unix -->
        <profile>
            <id>unix</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>

            <build>
                <plugins>
                    <!-- set executable bit on testerum shell script -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-runner-shell-script-executable</id>
                                <phase>package</phase>
                                <configuration>
                                    <target>
                                        <exec executable="/bin/sh" failifexecutionfails="true" failonerror="false">
                                            <arg value="-c" />
                                            <arg value="chmod +x '${project.basedir}/../../../package/runner/bin/*.sh'" />
                                        </exec>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
