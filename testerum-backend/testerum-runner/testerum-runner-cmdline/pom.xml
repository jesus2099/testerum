<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>testerum-runner</artifactId>
        <groupId>com.testerum</groupId>
        <version>1.0.1</version>
    </parent>

    <artifactId>testerum-runner-cmdline</artifactId>
    <packaging>jar</packaging>


    <properties>
        <mainClass>com.testerum.runner_cmdline.TesterumRunner</mainClass>

        <reportTemplatesNodePath>${project.basedir}/src/main/assembly/report_templates</reportTemplatesNodePath>
    </properties>

    <dependencies>
        <!--==================== Internal Dependencies ====================-->

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-di</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-kotlin</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-cmdline</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-expression-evaluator</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-rdbms</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-runner-api</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>model</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>settings</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-scanner</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>file-service</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-json</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-jdk</artifactId>
        </dependency>


        <!--==================== External Dependencies ====================-->

        <!-- logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
        </dependency>

        <!-- Kotlin -->
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-reflect</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib-jdk8</artifactId>
        </dependency>

        <!-- Kotlin Jackson integration-->
        <dependency>
            <groupId>com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-kotlin</artifactId>
        </dependency>
        <!-- Json -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-jsr310</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-guava</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-afterburner</artifactId>
        </dependency>

        <!-- slf4j -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
        </dependency>

        <!-- Apache Commons -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>

        <!-- jansi -->
        <dependency>
            <groupId>org.fusesource.jansi</groupId>
            <artifactId>jansi</artifactId>
        </dependency>

        <!-- picocli: command line args parser -->
        <dependency>
            <groupId>info.picocli</groupId>
            <artifactId>picocli</artifactId>
        </dependency>

        <!-- zt-exec -->
        <dependency>
            <groupId>org.zeroturnaround</groupId>
            <artifactId>zt-exec</artifactId>
        </dependency>


        <!--==================== test dependencies ====================-->

        <!-- JUnit 5 -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-params</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.platform</groupId>
            <artifactId>junit-platform-launcher</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- java-hamcrest -->
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>java-hamcrest</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>src/main/kotlin</sourceDirectory>

        <plugins>
            <!-- Kotlin -->
            <plugin>
                <artifactId>kotlin-maven-plugin</artifactId>
                <groupId>org.jetbrains.kotlin</groupId>
            </plugin>

            <!-- compile report templates  -->
            <plugin>
                <groupId>com.github.eirslett</groupId>
                <artifactId>frontend-maven-plugin</artifactId>

                <configuration>
                    <installDirectory>${reportTemplatesNodePath}</installDirectory>
                </configuration>

                <executions>
                    <!-- install-node-and-npm -->
                    <execution>
                        <id>compile-report-templates--install-node-and-npm</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>install-node-and-npm</goal>
                        </goals>
                    </execution>

                    <!-- pretty / app -->
                    <execution>
                        <id>compile-report-templates--npm-install--pretty-app</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>install</arguments>
                            <workingDirectory>${project.basedir}/src/main/assembly/report_templates/templates/pretty/app</workingDirectory>
                        </configuration>
                    </execution>

                    <execution>
                        <id>compile-report-templates--npm-build--pretty-app</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>run build-prod</arguments>
                            <workingDirectory>${project.basedir}/src/main/assembly/report_templates/templates/pretty/app</workingDirectory>
                        </configuration>
                    </execution>

                    <!-- pretty / generator -->
                    <execution>
                        <id>compile-report-templates--npm-install--pretty-generator</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>install</arguments>
                            <workingDirectory>${project.basedir}/src/main/assembly/report_templates/templates/pretty/generator</workingDirectory>
                        </configuration>
                    </execution>

                    <execution>
                        <id>compile-report-templates--npm-build--pretty-generator</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>run build-prod</arguments>
                            <workingDirectory>${project.basedir}/src/main/assembly/report_templates/templates/pretty/generator</workingDirectory>
                        </configuration>
                    </execution>

                    <execution>
                        <id>compile-report-templates--npm-install-dependencies-in-dist-dir--pretty-generator</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>npm</goal>
                        </goals>
                        <configuration>
                            <arguments>install --only=production</arguments>
                            <workingDirectory>${project.basedir}/src/main/assembly/report_templates/templates/pretty/generator/dist</workingDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>


    <profiles>
        <!-- production -->
        <profile>
            <id>production</id>

            <!-- activated by the presence of the "production" system property -->
            <activation>
                <property>
                    <name>production</name>
                </property>
            </activation>

            <build>
                <plugins>
                    <!-- download nodejs -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>

                        <executions>
                            <!-- download-node -->
                            <execution>
                                <id>download-node</id>
                                <phase>prepare-package</phase>
                                <configuration>
                                    <target>
                                        <ant antfile="build.xml" target="main-prod" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- maven-assembly-plugin (create final dist file) -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>

                        <configuration>
                            <appendAssemblyId>true</appendAssemblyId>
                            <attach>true</attach>
                        </configuration>

                        <executions>
                            <!-- assemble-dist-linux -->
                            <execution>
                                <id>assemble-dist-linux</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-linux.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                            <!-- assemble-dist-mac -->
                            <execution>
                                <id>assemble-dist-mac</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-mac.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                            <!-- assemble-dist-windows -->
                            <execution>
                                <id>assemble-dist-windows</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-windows.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- development -->
        <profile>
            <id>development</id>

            <!-- activated by the absence of the "production" system property -->
            <activation>
                <property>
                    <name>!production</name>
                </property>
            </activation>

            <build>
                <plugins>
                    <!-- copy dependencies to "package/basic_steps" directory -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>

                        <configuration>
                            <outputDirectory>${project.basedir}/../../../package/runner/repo</outputDirectory>
                            <includeScope>runtime</includeScope>
                        </configuration>
                    </plugin>

                    <!-- download nodejs & copy to package directory -->
                   <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>

                       <executions>
                           <!-- delete-node-download -->
                           <execution>
                               <id>delete-node-download</id>
                               <phase>clean</phase>
                               <configuration>
                                   <target>
                                       <ant antfile="build.xml" target="clean" />
                                   </target>
                               </configuration>
                               <goals>
                                   <goal>run</goal>
                               </goals>
                           </execution>

                           <!-- download-node -->
                           <execution>
                               <id>download-node</id>
                               <phase>prepare-package</phase>
                               <configuration>
                                   <target>
                                       <ant antfile="build.xml" target="main-dev" />
                                   </target>
                               </configuration>
                               <goals>
                                   <goal>run</goal>
                               </goals>
                           </execution>

                           <!-- set executable bit on linux/mac shell script -->
                           <execution>
                               <id>make-runner-shell-script-executable</id>
                               <phase>package</phase>
                               <configuration>
                                   <target>
                                       <chmod perm="ugo+x">
                                           <fileset dir="${project.basedir}/../../../package/runner/bin">
                                               <include name="**/*.sh" />
                                           </fileset>
                                       </chmod>
                                   </target>
                               </configuration>
                               <goals>
                                   <goal>run</goal>
                               </goals>
                           </execution>

                       </executions>
                    </plugin>

                    <!-- copy shell scripts & compiled report templates to package directory  -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <!-- copy-shell-scripts-to-package-dir -->
                            <execution>
                                <id>copy-shell-scripts-to-package-dir</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.basedir}/../../../package/runner</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.basedir}/src/main/assembly/package</directory>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>

                            <!-- copy-compiled-report-templates-to-package-dir: pretty -->
                            <execution>
                                <id>copy-compiled-report-templates-to-package-dir--pretty</id>
                                <phase>prepare-package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.basedir}/../../../package/runner/report_templates/pretty</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.basedir}/src/main/assembly/report_templates/templates/pretty/generator/dist</directory>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>

</project>
