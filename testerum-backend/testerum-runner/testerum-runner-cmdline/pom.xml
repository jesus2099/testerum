<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>testerum-runner</artifactId>
        <groupId>com.testerum</groupId>
        <version>develop-SNAPSHOT</version>
    </parent>

    <artifactId>testerum-runner-cmdline</artifactId>
    <packaging>jar</packaging>


    <properties>
        <mainClass>com.testerum.runner_cmdline.TesterumRunner</mainClass>
    </properties>

    <dependencies>
        <!--==================== Internal Dependencies ====================-->

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-di</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-kotlin</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-cmdline</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-expression-evaluator</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-rdbms</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-runner-api</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>model</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>settings</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-scanner</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>file-service</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-json</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>common-jdk</artifactId>
        </dependency>


        <!--==================== External Dependencies ====================-->

        <!-- logging -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
        </dependency>

        <!-- Kotlin -->
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-reflect</artifactId>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib-jdk8</artifactId>
        </dependency>

        <!-- Kotlin Jackson integration-->
        <dependency>
            <groupId>com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-kotlin</artifactId>
        </dependency>
        <!-- Json -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-annotations</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-jsr310</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.datatype</groupId>
            <artifactId>jackson-datatype-guava</artifactId>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.module</groupId>
            <artifactId>jackson-module-afterburner</artifactId>
        </dependency>

        <!-- slf4j -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
        </dependency>

        <!-- Apache Commons -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
        </dependency>

        <!-- jansi -->
        <dependency>
            <groupId>org.fusesource.jansi</groupId>
            <artifactId>jansi</artifactId>
        </dependency>

        <!-- picocli: command line args parser -->
        <dependency>
            <groupId>info.picocli</groupId>
            <artifactId>picocli</artifactId>
        </dependency>

    </dependencies>

    <build>
        <sourceDirectory>src/main/kotlin</sourceDirectory>

        <plugins>
            <!-- Kotlin -->
            <plugin>
                <artifactId>kotlin-maven-plugin</artifactId>
                <groupId>org.jetbrains.kotlin</groupId>
            </plugin>
        </plugins>
    </build>


    <profiles>
        <!-- production -->
        <profile>
            <id>production</id>

            <!-- activated by the presence of the "production" system property -->
            <activation>
                <property>
                    <name>production</name>
                </property>
            </activation>

            <build>
                <plugins>
                    <!-- download nodejs -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>

                        <executions>
                            <!-- download-node -->
                            <execution>
                                <id>download-node</id>
                                <phase>prepare-package</phase>
                                <configuration>
                                    <target>
                                        <ant antfile="build.xml" target="main-prod" />
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <!-- maven-assembly-plugin (create final dist file) -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>

                        <configuration>
                            <appendAssemblyId>true</appendAssemblyId>
                            <attach>true</attach>
                        </configuration>

                        <executions>
                            <!-- assemble-dist-linux -->
                            <execution>
                                <id>assemble-dist-linux</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-linux.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                            <!-- assemble-dist-mac -->
                            <execution>
                                <id>assemble-dist-mac</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-mac.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                            <!-- assemble-dist-windows -->
                            <execution>
                                <id>assemble-dist-windows</id>
                                <phase>package</phase>

                                <goals>
                                    <goal>single</goal>
                                </goals>

                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/assembly-descriptor-windows.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>

                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>

        <!-- development -->
        <profile>
            <id>development</id>

            <!-- activated by the absence of the "production" system property -->
            <activation>
                <property>
                    <name>!production</name>
                </property>
            </activation>

            <build>
                <plugins>
                    <!-- copy dependencies to "package/basic_steps" directory -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-dependency-plugin</artifactId>

                        <configuration>
                            <outputDirectory>${project.basedir}/../../../package/runner/repo</outputDirectory>
                            <includeScope>runtime</includeScope>
                        </configuration>
                    </plugin>

                    <!-- download nodejs & copy to package directory -->
                   <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>

                       <executions>
                           <!-- delete-node-download -->
                           <execution>
                               <id>delete-node-download</id>
                               <phase>clean</phase>
                               <configuration>
                                   <target>
                                       <ant antfile="build.xml" target="clean" />
                                   </target>
                               </configuration>
                               <goals>
                                   <goal>run</goal>
                               </goals>
                           </execution>

                           <!-- download-node -->
                           <execution>
                               <id>download-node</id>
                               <phase>prepare-package</phase>
                               <configuration>
                                   <target>
                                       <ant antfile="build.xml" target="main-dev" />
                                   </target>
                               </configuration>
                               <goals>
                                   <goal>run</goal>
                               </goals>
                           </execution>
                       </executions>
                    </plugin>

                    <!-- copy shell scripts to package directory  -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-runner-to-package-dir</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>copy-resources</goal>
                                </goals>
                                <configuration>
                                    <outputDirectory>${project.basedir}/../../../package/runner</outputDirectory>
                                    <resources>
                                        <resource>
                                            <directory>${project.basedir}/src/main/assembly/package</directory>
                                            <filtering>false</filtering>
                                        </resource>
                                    </resources>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>

        <!-- unix -->
        <profile>
            <id>unix</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>

            <build>
                <plugins>
                    <!-- set executable bit on testerum shell script -->
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-runner-shell-script-executable</id>
                                <phase>package</phase>
                                <configuration>
                                    <target>
                                        <exec executable="/bin/sh" failifexecutionfails="true" failonerror="false">
                                            <arg value="-c" />
                                            <arg value="chmod +x '${project.basedir}/../../../package/runner/bin/*.sh'" />
                                        </exec>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>
