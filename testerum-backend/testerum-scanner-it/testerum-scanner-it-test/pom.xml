<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>testerum-scanner-it</artifactId>
        <groupId>com.testerum</groupId>
        <version>develop-SNAPSHOT</version>
    </parent>

    <artifactId>testerum-scanner-it-test</artifactId>

    <dependencies>
        <!--==================== Internal Dependencies ====================-->

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-api</artifactId>
        </dependency>

        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-scanner</artifactId>
        </dependency>

        <!--
            Depending on step libraries to make sure Maven builds them before this module.

            Scope is "provided" to insure that the step libraries will not end-up in the
            runtime classpath of this module (we are scanning jars directly).
        -->
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-scanner-it-steplib1</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-scanner-it-steplib2</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.testerum</groupId>
            <artifactId>testerum-scanner-it-steplib3-java</artifactId>
        </dependency>


        <!--==================== External Dependencies ====================-->
        <!-- Kotlin -->
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib-jdk8</artifactId>
        </dependency>


        <!--==================== test dependencies ====================-->

        <!-- JUnit 5 -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-params</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.platform</groupId>
            <artifactId>junit-platform-launcher</artifactId>
            <scope>test</scope>
        </dependency>

        <!-- java-hamcrest -->
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>java-hamcrest</artifactId>
            <scope>test</scope>
        </dependency>

    </dependencies>


    <build>
        <testSourceDirectory>src/test/kotlin</testSourceDirectory>

        <plugins>
            <!-- Kotlin -->
            <plugin>
                <artifactId>kotlin-maven-plugin</artifactId>
                <groupId>org.jetbrains.kotlin</groupId>
            </plugin>
        </plugins>
    </build>

</project>
